<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SettingsBase" parent="@android:style/Theme.Material.Settings">
	<item name="android:colorPrimary">@*common:color/primary</item>
        <item name="android:colorPrimaryDark">@*common:color/primarydark</item>
        <item name="android:colorAccent">@*common:color/primaryaccent</item>
        <item name="android:colorControlNormal">@*common:color/white</item>
	<item name="android:navigationBarColor">@*common:color/primary</item>
        <item name="android:textColorSecondary">@*common:color/white</item>
        <item name="android:actionBarStyle">@style/Theme.ActionBar</item>
    </style>

    <style name="Theme.ActionBar" parent="@android:style/Widget.Material.Light.ActionBar.Solid">
        <item name="android:colorPrimary">@color/theme_primary</item>
    </style>

    <style name="Theme.ActionBar" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:background">@*common:color/primary</item>
        <item name="android:titleTextStyle">@style/TitleBarTextColor</item>
    </style>

    <style name="TitleBarTextColor" parent="@android:style/TextAppearance">
	<item name="android:textColor">@*common:color/white</item>
    </style>

    <style name="TextAppearance.CategoryTitle" parent="@android:style/TextAppearance.Material.Small">
        <item name="android:textColor">@*common:color/primaryaccent</item>
    </style>

    <style name="Theme.Material.Settings" parent="@android:style/Theme.Material">
       <item name="android:colorBackground">@*common:color/black</item>
       <item name="android:colorPrimary">@*common:color/primary</item>
       <item name="android:colorPrimaryDark">@*common:color/primarydark</item>
       <item name="android:colorAccent">@*common:color/primaryaccent</item>
   </style>

    <style name="Theme.SettingsBase" parent="@android:style/Theme.Material">
       <item name="android:colorForeground">@*common:color/white</item>
    </style>
   
    <style name="Theme.AlertDialog" parent="@android:style/Theme.Material.Dialog.Alert">
        <item name="android:colorAccent">@*common:color/white</item>
        <item name="android:colorBackground">@*common:color/primary</item>
    </style>

    <style name="Theme.DialogWhenLarge" parent="@android:style/Theme.Material.DialogWhenLarge">
        <item name="android:colorAccent">@*common:color/white</item>
    </style>

    <style name="Theme.SubSettingsDialogWhenLarge" parent="@style/Theme.SettingsBase" />

    <style name="bt_item">
        <item name="android:textColor">@*common:color/white</item>
    </style>

    <style name="bt_item_label">
        <item name="android:textColor">@*common:color/white</item>
    </style>

    <style name="bt_item_edit_content">
        <item name="android:textColor">@*common:color/white</item>
    </style>

    <style name="wifi_item_label">
        <item name="android:textColor">@*common:color/white</item>
    </style>

    <style name="wifi_item_content">
        <item name="android:textColor">@*common:color/white</item>
    </style>

    <style name="wifi_item_edit_content">
        <item name="android:textColor">@*common:color/white</item>
    </style>
</resources>
